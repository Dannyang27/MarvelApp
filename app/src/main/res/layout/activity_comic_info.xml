<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ComicInfoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/comic_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolbarTheme"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/comic_info_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/comicsampleblur">

                <ImageView
                    android:id="@+id/comic_info_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/comicsample"
                    android:elevation="4dp"
                    android:layout_margin="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="10dp"
                    android:layout_below="@+id/comic_info_poster">
                    <TextView
                        android:id="@+id/comic_info_diamondcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/diamondcode_sample"
                        android:fontFamily="@font/robotobold"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_verylarge"
                        android:textColor="@color/whitesmoke"/>

                    <TextView
                        android:id="@+id/comic_info_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_sample"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/whitesmoke"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/comic_info_releasedate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/releasedate_sample"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/whitesmoke"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/isbn_title"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/whitesmoke"/>

                        <TextView
                            android:id="@+id/comic_info_isbn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/isbn_sample"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/whitesmoke"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/upc_title"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/whitesmoke"/>

                        <TextView
                            android:id="@+id/comic_info_upc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/upc_sample"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/whitesmoke"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/comic_info_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/price_sample"
                        android:textSize="@dimen/text_verylarge"
                        android:textColor="@color/whitesmoke"
                        android:gravity="bottom"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overview"
                    android:textSize="@dimen/text_large"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:id="@+id/comic_info_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_sample"
                    android:textSize="@dimen/text_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/writtenby"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/writtenby_sample"
                        android:textSize="@dimen/text_medium"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/coverby"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_large"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/coverby_sample"
                        android:textSize="@dimen/text_medium"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/artby"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_large"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/artby_sample"
                        android:textSize="@dimen/text_medium"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview"
                android:textSize="@dimen/text_large"
                android:paddingHorizontal="10dp"
                android:textColor="@color/colorAccent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comic_info_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>